<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <TextView
        android:id="@+id/product_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/thumbnail"
        android:text="@string/my_product"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/product_desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/thumbnail"
        android:layout_alignBottom="@+id/thumbnail"
        android:layout_alignLeft="@+id/product_name"
        android:text="@string/testtest" />

    <TextView
        android:id="@+id/product_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/thumbnail"
        android:layout_alignLeft="@+id/product_name"
        android:text="@string/testtest" />

    <Button
        android:id="@+id/thumbnail"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true" />

    <Button
        android:id="@+id/add_to_cart"
        style="@style/AppTheme"
        android:layout_width="wrap_content"
        android:layout_height="10dp"
        android:layout_above="@+id/product_desc"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:text="@string/Add" />

    <Spinner
        android:id="@+id/spin_quantity"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignBottom="@+id/product_id"
        android:layout_alignLeft="@+id/add_to_cart"
        android:layout_alignTop="@+id/product_id"
        android:entries="@array/array_name"
        android:singleLine="true" />

</RelativeLayout>